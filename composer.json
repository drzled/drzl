{
    "name": "drzled/drzl",
    "description": "Deploy Laravel apps anywhere.",
    "license": "MIT",
    "authors": [
        {
            "name": "Jorge Carballo",
            "email": "jorge@molmo.es",
            "homepage": "https://molmo.es",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/drzled/drzl",
    "keywords": [
        "php",
        "cli",
        "drzl",
        "docker",
        "deploy",
        "cloud"
    ],
    "autoload": {
        "psr-4": {
            "Drzl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "vendor/orchestra/testbench-core/laravel/app",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1.0",
        "illuminate/conditionable": "^10.0",
        "illuminate/console": "^10.0",
        "illuminate/encryption": "^10.0",
        "illuminate/notifications": "^10.0",
        "illuminate/process": "^10.0",
        "illuminate/support": "^10.0",
        "illuminate/validation": "^10.0",
        "symfony/stopwatch": "^6.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.5.1",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^7.0|^8.0",
        "pestphp/pest": "^2.6",
        "phpstan/extension-installer": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Drzl\\DrzlServiceProvider"
            ],
            "aliases": {
                "Drzl": "Drzled\\Drzl"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest"
    }
}
